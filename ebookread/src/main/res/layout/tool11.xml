<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool11"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="22dp"
            android:text="修改字号"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_size_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:src="@mipmap/ico_reader_font1" />

        <ImageView
            android:id="@+id/iv_size_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:src="@mipmap/ico_reader_font2" />


        <!-- android:thumbOffset="0dp"-->
        <!--<TextView-->
            <!--android:id="@+id/tv_turn_progress"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="131515"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:textColor="@color/read_text" />-->

        <TextView
            android:id="@+id/tv_word_size"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="20号字"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_alignTop="@id/iv_size_minus"
            android:layout_toRightOf="@id/iv_size_minus"
            android:layout_toLeftOf="@id/iv_size_add"
            android:layout_toStartOf="@id/iv_size_add"
            android:layout_alignBottom="@id/iv_size_minus" />
    </RelativeLayout>


</RelativeLayout>